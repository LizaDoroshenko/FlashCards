    <img src=""  class="card-img-top" alt="image">
    <div class="card-body">
      <p class="card-text">{{this.theme}}</p>
      <button cardid='{{this.id}}' type="submit" class="btn btn-primary btn btn-light">Играть</button>
    </div>
  </div>
</form>
{{/each}}
</div>
